<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="liip_vie.viecontroller.class">Liip\VieBundle\Controller\VieController</parameter>
    </parameters>

    <services>
        <service id="liip_vie.viecontroller" class="%liip_vie.viecontroller.class%" public="true">
            <argument type="service" id="service_container"/>
            <argument>%liip_vie.use_coffee%</argument>
        </service>

        <service id="liip_vie.assets.controller" class="Liip\VieBundle\Controller\AssetsController" public="true">
            <argument type="service" id="service_container"/>
        </service>
    </services>

</container>