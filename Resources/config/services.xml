<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symfony_cmf_create.controller.vie.class">Symfony\Cmf\Bundle\CreateBundle\Controller\VieController</parameter>
        <parameter key="symfony_cmf_create.controller.assets.class">Symfony\Cmf\Bundle\CreateBundle\Controller\AssetsController</parameter>
        <parameter key="symfony_cmf_create.rdf_type_factory_class">Midgard\CreatePHP\Metadata\RdfTypeFactory</parameter>
        <parameter key="symfony_cmf_create.rest_handler_class">Midgard\CreatePHP\RestService</parameter>
    </parameters>

    <services>
        <service id="symfony_cmf_create.controller.vie" class="%symfony_cmf_create.controller.vie.class%" public="true">
            <argument type="service" id="fos_rest.view_handler" />
            <argument>%symfony_cmf_create.stanbol_url%</argument>
            <argument>%symfony_cmf_create.use_coffee%</argument>
        </service>

        <service id="symfony_cmf_create.controller.assets" class="%symfony_cmf_create.controller.assets.class%" public="true">
            <!-- TODO: this depends on doctrine phpcr-odm -->
            <argument type="service" id="doctrine_phpcr.odm.default_document_manager" />
            <argument type="service" id="router"/>
            <argument type="service" id="fos_rest.view_handler"/>
            <argument>%symfony_cmf_create.base_path%</argument>
            <argument>%symfony_cmf_create.cms_path%</argument>
        </service>

        <service id="symfony_cmf_create.controller.rest" class="Symfony\Cmf\Bundle\CreateBundle\Controller\RestController">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="validator"/>
            <argument type="service" id="symfony_cmf_create.object_mapper"/>
            <argument type="service" id="symfony_cmf_create.rdf_type_factory"/>
            <argument type="service" id="symfony_cmf_create.rest_handler"/>
            <argument>%symfony_cmf_create.role%</argument>
            <argument type="service" id="security.context"/>
            <argument type="service" id="symfony_cmf_create.filter" on-invalid="ignore" />
        </service>

        <service id="symfony_cmf_create.twig_extension" class="Midgard\CreatePHP\Extension\Twig\CreatephpExtension">
            <argument type="service" id="symfony_cmf_create.rdf_type_factory"/>
            <tag name="twig.extension"/>
        </service>

        <service id="symfony_cmf_create.rdf_driver" class="Midgard\CreatePHP\Metadata\RdfDriverXml">
            <argument>%symfony_cmf_create.rdf_config_dirs%</argument>
        </service>

        <service id="symfony_cmf_create.rdf_type_factory" class="%symfony_cmf_create.rdf_type_factory_class%" public="true">
            <argument type="service" id="symfony_cmf_create.object_mapper"/>
            <argument type="service" id="symfony_cmf_create.rdf_driver"/>
        </service>

        <service id="symfony_cmf_create.rest_handler" class="%symfony_cmf_create.rest_handler_class%" public="true">
            <argument type="service" id="symfony_cmf_create.object_mapper"/>
        </service>

    </services>

</container>
