<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="liip_vie_phpcr_put_document" pattern="/liip/vie/phpcr/documents/{id}">
        <default key="_controller">liip_vie.phpcr.controller:putDocumentAction</default>
        <default key="_format">json</default>
        <requirement key="_method">PUT</requirement>
        <requirement key="id">.+</requirement>
    </route>
</routes>
