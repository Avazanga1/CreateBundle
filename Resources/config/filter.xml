<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="symfony_cmf_create.mapping.annotation_loader.class">DMS\Filter\Mapping\Loader\AnnotationLoader</parameter>
        <parameter key="symfony_cmf_create.mapping.factory.class">DMS\Filter\Mapping\ClassMetadataFactory</parameter>
        <parameter key="symfony_cmf_create.filter.class">DMS\Filter\Filter</parameter>

    </parameters>

    <services>

        <service id="symfony_cmf_create.metadata.annotation_reader" alias="annotation_reader" public="false" />

        <service id="symfony_cmf_create.mapping.annotation_loader" class="%symfony_cmf_create.mapping.annotation_loader.class%" public="false">
            <argument type="service" id="symfony_cmf_create.metadata.annotation_reader" />
        </service>

        <service id="symfony_cmf_create.mapping.factory" class="%symfony_cmf_create.mapping.factory.class%" public="false">
            <argument type="service" id="symfony_cmf_create.mapping.annotation_loader" />
        </service>

        <service id="symfony_cmf_create.filter" class="%symfony_cmf_create.filter.class%" public="true">
            <argument type="service" id="symfony_cmf_create.mapping.factory" />
        </service>

    </services>

</container>
