<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="liip_vie_assets_search" pattern="/liip/vie/assets/search/">
        <default key="_controller">liip_vie.controller.assets:searchAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="liip_vie_assets_related" pattern="/liip/vie/assets/related/">
        <default key="_controller">liip_vie.controller.assets:showRelatedAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="liip_vie_assets_search" pattern="/liip/vie/assets/list/">
        <default key="_controller">liip_vie.controller.assets:listAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
    
</routes>
