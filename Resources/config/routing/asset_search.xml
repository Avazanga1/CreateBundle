<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="symfony_cmf_create_assets_search" pattern="/symfony-cmf/create/assets/search/">
        <default key="_controller">symfony_cmf_create.assets.controller:searchAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="symfony_cmf_create_assets_related" pattern="/symfony-cmf/create/assets/related/">
        <default key="_controller">symfony_cmf_create.assets.controller:showRelatedAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="symfony_cmf_create_assets_list" pattern="/symfony-cmf/create/assets/list/">
        <default key="_controller">symfony_cmf_create.assets.controller:listAction</default>
        <default key="_format">json</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
