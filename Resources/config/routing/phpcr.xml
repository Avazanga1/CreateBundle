<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="liip_vie_phpcr_odm_put_document" pattern="/liip/vie/phpcr_odm/documents/{id}">
        <default key="_controller">liip_vie.phpcr.controller:putDocumentAction</default>
        <default key="_format">json</default>
        <requirement key="_method">PUT</requirement>
        <requirement key="id">.+</requirement>
    </route>

    <!-- this route should never be used from the outside, only to be used inside "includejsfiles-vie.html.twig -->
    <route id="liip_vie_phpcr_odm_put_documents" pattern="/{_locale}/liip/vie/phpcr_odm/documents" />

</routes>
